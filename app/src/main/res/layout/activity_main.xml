<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/font"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <View
        android:id="@+id/TopView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#079527" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/arrow" />

    <ImageView
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/TopView"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/search" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/TopView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:src="@drawable/play_btn" />

    <View
        android:id="@+id/app_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/TopView"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:background="#079527" />

    <ImageView
        android:id="@+id/bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/app_icon"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:src="@drawable/bookmark" />

    <View
        android:id="@+id/desc_line_1"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_alignTop="@id/app_icon"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="20dp"
        android:background="#C4C4C4" />

    <View
        android:id="@+id/desc_line_2"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_below="@id/desc_line_1"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="15dp"
        android:background="#C4C4C4" />


    <View
        android:id="@+id/desc_line_3"
        android:layout_width="60dp"
        android:layout_height="15dp"
        android:layout_below="@id/desc_line_2"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="15dp"
        android:background="#C4C4C4" />

    <TextView

        android:id="@+id/try_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_icon"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/try_btn_bg"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:text="TRY NOW"
        android:textColor="#079527"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/install_bnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_icon"
        android:layout_alignTop="@id/try_btn"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/try_btn"
        android:background="@drawable/instal_btn_bg"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:paddingVertical="8dp"
        android:text="INSTALL"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/circle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/try_btn"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/circle" />

    <ImageView
        android:id="@+id/circle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/try_btn"
        android:layout_alignTop="@id/circle1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle" />

    <ImageView
        android:id="@+id/circle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/try_btn"
        android:layout_alignTop="@id/circle1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:background="@drawable/circle" />

    <View
        android:id="@+id/bottom_line1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_above="@id/bottom_line2"
        android:layout_marginHorizontal="20dp"
        android:background="#C4C4C4" />

    <View
        android:id="@+id/bottom_line2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="45dp"
        android:layout_marginVertical="15dp"
        android:background="#C4C4C4" />
</RelativeLayout>